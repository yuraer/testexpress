@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')
global-reset()
main-color = #fa5b4d
background-color = #faf9f0
main-border = 1px dotted #ccc

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.txtLogin
  width 200px

.btnLogin
  width 200px

.inpLogin
  width 200px

table
  border main-border
  width 100%
  height 100%

td  
  border main-border
  text-align center

th
  border main-border
  text-align center
  font-weight bold

caption
  text-align center
  font-weight bold